---
import Layout from '../layouts/Layout.astro';
import { Header, Footer, Menu } from '../components';
---

<Layout title="Blog - Flamingalo">
  <a class="skip-link" href="#content">Skip to content</a>
  
  <Header client:load />
  <Menu client:load />
  
  <main id="content" style="padding-top: 100px; min-height: 80vh;">
    <div style="max-width: 800px; margin: 0 auto; padding: 40px 20px; text-align: center;">
      <h1 style="font-size: 3rem; margin-bottom: 20px;">Blog</h1>
      <p style="font-size: 1.2rem; color: #666; margin-bottom: 40px;">
        Coming soon! We're working on bringing you the latest news and stories from the Flamingalo community.
      </p>
      <a href="/" style="display: inline-block; background: #e74c76; color: white; padding: 12px 24px; text-decoration: none; border-radius: 4px; font-size: 16px;">
        Back to Home
      </a>
    </div>
  </main>
  
  <Footer client:load />
</Layout>


