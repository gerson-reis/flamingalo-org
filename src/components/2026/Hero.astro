---
export interface Props {
  title?: string;
  date?: string;
  location?: string;
  ctaText?: string;
  ctaLink?: string;
}

const {
  title = "Mundo Bizarro",
  date = "April 30 â€“ May 5",
  location = "Alentejo, Portugal",
  ctaText = "Get Flicket",
  ctaLink = "https://docs.google.com/forms/d/e/1FAIpQLScs8aI-l4wNJsx-DzniUFuuZE5TOFTVsRtmzK8fiW-8_zx-qw/viewform?usp=header"
} = Astro.props;
---

<div class="hero">
  <h1 class="mundobizarro">
    <img 
      src="/mundo-bizarro-type-pink.png" 
      alt={title}
      width="500"
      height="140"
      loading="eager"
    />
  </h1>
  <div class="hero-inner">
    <h4><span>{date}</span></h4>
    <h5 class="subtitle"><span>{location}</span></h5>
    <div class="highlight">
      <div class="highlight-inner">
        <p class="buttons">
          <a 
            href={ctaLink}
            class="button button--pink button--large"
            target="_blank"
            rel="noopener noreferrer"
          >
            <span class="text">{ctaText}</span>
          </a>
        </p>
      </div>
    </div>
  </div>
</div>

